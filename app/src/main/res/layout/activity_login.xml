<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.appbusters.robinkamboj.practicingfirebase.LoginActivity"
    android:gravity="center_horizontal">

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher_round"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GRE"
        android:textSize="30sp"
        android:textColor="@color/colorWhiteShade"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_weight="1"
        android:padding="4sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Word List"
        android:textSize="25sp"
        android:textColor="@color/colorPrimaryLight"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_weight="1"
        android:padding="4sp"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0sp"
        android:text="User Name:"
        android:textSize="15sp"
        android:textColor="@color/colorWhiteShade"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_weight="1"
        android:padding="4sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:textColorHint="@color/colorWhiteShade"
        android:backgroundTint="@color/colorWhiteShade"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="Username Goes Here"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0sp"
        android:text="Email:"
        android:textSize="15sp"
        android:textColor="@color/colorWhiteShade"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_weight="1"
        android:padding="4sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:textColorHint="@color/colorWhiteShade"
        android:backgroundTint="@color/colorWhiteShade"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="Email ID Goes Here"
        android:layout_weight="1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:text="LOGIN"
        android:paddingStart="15sp"
        android:paddingEnd="15sp"
        android:textColor="@color/colorWhiteShade"
        android:backgroundTint="@color/colorAccent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0sp"
        android:text="OR"
        android:textSize="25sp"
        android:textColor="@color/colorWhiteShade"
        android:fontFamily="casual"
        android:layout_weight="1"
        android:padding="4sp"/>

</LinearLayout>
